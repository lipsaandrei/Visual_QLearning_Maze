<Window x:Class="Visual_QLearning_Maze.TrainingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="Training" Height="400" Width="600">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Name="EpisodeLabel" FontSize="16" FontWeight="Bold" Margin="10"/>

        <oxy:PlotView Name="Plot" Grid.Row="1"/>
    </Grid>
</Window>
